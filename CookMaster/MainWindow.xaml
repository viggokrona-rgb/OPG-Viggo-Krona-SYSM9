<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
         xmlns:vm="clr-namespace:CookMaster.ViewModels"
        mc:Ignorable="d"
        Title="CookMaster" Height="800" Width="1024" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome to CookMaster!" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="100,0,100,0">
            <TextBlock Text="Användarnamn" Margin="4"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" MinWidth="240"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="100,8,100,0">
            <TextBlock Text="Lösenord" Margin="4"/>
            <PasswordBox local:PasswordHelper.BindPassword="True" local:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay}" MinWidth="240"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,14,0,0">

            <Button Content="Logga in" Command="{Binding SignInCommand}" HorizontalAlignment="Left" Padding="16,6" IsDefault="True"/>

            <Button Content="Registrera" Command="{Binding RegisterCommand}" HorizontalAlignment="Right" Padding="12,6" Margin="8,0,0,0"/>

            <Button Content="Glömt Lösenord?" Command="{Binding ForgotPasswordCommand}" Padding="12,6" Margin="8,0,0,0"/>

            <TextBlock Grid.Row="5" Text="{Binding ErrorMessage}" Foreground="Tomato" Margin="0,8,0,0"/>
        </StackPanel>


    </Grid>
</Window>
