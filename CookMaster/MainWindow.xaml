<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="CookMaster" Height="500" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome to CookMaster!" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="100,0,100,0">
            <TextBlock Text="Användarnamn" Margin="4"/>
            <TextBox x:Name="UsernameTextBox" Height="30"/>

        </StackPanel>
       
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="100,10,100,0">
            <TextBlock Text="Lösenord" Margin="4"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
            <Button Name="SignInButton" Width="120" Height="36" Margin="6" Click="SignInButton_Click">Logga In</Button>
            <Button Name="RegisterButton" Width="120" Height="36" Margin="6" Click="RegisterButton_Click">Registrera</Button>
        </StackPanel>

    </Grid>
</Window>
