<Window x:Class="CookMaster.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="Register - CookMaster" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Skapa nytt konto" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,6"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="100,8,100,0">
            
            <TextBlock Text=" Användarnamn" Margin="4"/>
            
            <TextBox Name="RegUsernameBox" Height="30"/>
            
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="100,8,100,0">
           
            <TextBlock Text=" Lösenord" Margin="4"/>
            
            <TextBox Name="RegPasswordBox" Height="30"/>
            
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="100,8,100,0">

            <TextBlock Text="Land" Margin="4"/>
            <ComboBox Name="CountryComboBox" Height="30">
                <ComboBoxItem Content="Sweden" IsSelected="True"/>
                <ComboBoxItem Content="Norway"/>
                <ComboBoxItem Content="Denmark"/>
                <ComboBoxItem Content="Finland"/>
                <ComboBoxItem Content="Iceland"/>
                <ComboBoxItem Content="Other"/>

            </ComboBox>
            

        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
            <Button Name="CreateAccountButton" Width="140" Height="36" Margin="6" Click="CreateAccountButton_Click">Skapa Konto</Button>
            <Button Name="BackToLoginButton" Width="140" Height="36" Margin="6" Click="BackToLoginButton_Click">Tillbaka till Inloggning</Button>

        </StackPanel>



    </Grid>
</Window>
